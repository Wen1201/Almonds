
<h2>Login</h2>
<div class="create_post">
<% if flash[:error] %>

    <br>
    <strong>
      <%= flash[:error] %>
    </strong>
    <br>
    <br>

  <% end %>

<%= form_with url: login_path, local: true do |f| %>

  <%= f.label :email, 'Email Address' %>
  <br>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.submit'Login',class:"submit"%>

<% end %>
</div>