<% if @current_user.present? %>
<h1><%= @category.name %></h1>

<p>
Posts
</p>
<div class="container">
  <% @category.posts.each do |p| %>
  <div class="gallery-container w-2 h-2">
    <div class="gallery-item">
        <div class="image">
          <%= link_to (image_tag p.image, alt: p.name), post_path(p) %>
        </div>
        <div class="text"> 
          <%= link_to p.name, post_path(p.id) %>
        </div>
    </div>
  </div>
  <% end %>
</div>
<% else %>
  <p class="please"> Please <%= link_to 'Login', login_path%> or <%= link_to 'Sign Up', new_user_path %> to start.....</p>
<% end %>