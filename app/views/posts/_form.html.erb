

<% if @post.errors.any? %>
  <strong class="t">Please complete the following:</strong>
  <ul>
    <% @post.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
<%= form_with model: @post, local: true do |f| %>

<div class="all-form">
  <%= f.label :caption%>
  <br>
  <%= f.text_field :name, class:"field" %>
  <br>
  <br>

  <%= f.label :'What is on your mind'%>
  <br>
  <%= f.text_area :mind, class:"field" %>
  <br>
  <br>

  <%= f.label :image %>
  <br>
  <%= f.text_field :image, placeholder:'URL',class:"field" %>
  <br>
  <br>

  <%= f.label :movie %>
  <br>
  <%= f.text_field :movie, class:"field" %>
  <br>
  <br>

  <%= f.label :category %>
  <br>
  <%= f.select(:object_field, ['Romance', 'Disaster','Action', 'Thriller', 'Black Comedy', 'Coming-of-age', 'Drama', 'Adventure', 'Musicals(Dance)', 'Science Fiction', 'Epics/Historical/Period'],{ class: 'field' }) %>
  <br>
  <br>
  <%= f.submit :Create, class:"submit"%>
</div>
<% end %>
</div>
</div>