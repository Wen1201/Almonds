

<% if @post.errors.any? %>
  <strong>Please correct the following:</strong>
  <ul>
    <% @post.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, local: true do |f| %>

  <%= f.label :caption%>
  <br>
  <%= f.text_field :name %>
  <br>
  <br>

  <%= f.label :about %>
  <br>
  <%= f.text_area :about %>
  <br>
  <br>

  <%= f.label :image %>
  <br>
  <%= f.text_field :image %>
  <br>
  <br>

  <%= f.label :movie %>
  <br>
  <%= f.text_field :movie %>
  <br>
  <br>

  <%= f.label :category %>
  <br>
  <%= f.select(:object_field, ['Romance', 'Disaster','Action', 'Thriller', 'Black Comedy', 'Coming-of-age', 'Drama', 'Adventure', 'Musicals(Dance)', 'Science Fiction', 'Epics/Historical/Period']) %>
  <br>
  <br>



  <%= f.submit class:"submit"%>

<% end %>