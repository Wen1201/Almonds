
<h2>
  Post: <%= @post.name %>
</h2>

<p>
  <em>
    Last updated <%= time_ago_in_words(@post.updated_at) %> ago
    <br>
    Last Updated at <%= @post.updated_at.strftime '%A %e %b, %Y %l:%M%P' %>
  </em>
</p>

<p>
<%= @post.mind %>
</p>

<% if @current_user.present? && @current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %>
<% end %>
<br>



<% if @post.image.present? %>
  <%= image_tag @post.image, alt: @post.name %>
<% end %>

<% if @current_user.liked_posts.include?(@post) %>
  <%= button_to 'unlike', like_toggle_path(@post.id) %>
<% else %>
  <%= button_to 'like', like_toggle_path(@post.id) %>
<% end %>

<h3>
  Comments:
  <br><br>
  <% @post.comments.each do |c| %>
  <%= link_to c.user.name, user_path(c.user)%>  <%= c.comment %><br><br> 
  
  <% end %>
</h3>

<%= form_with model: @comment, local: true do |f| %>
   <%= f.hidden_field :post_id, value: @post.id %>
   <%= f.label :comment, "Add a comment" %>
   <%= f.text_field :comment %>  <%= f.submit 'submit' %>
   
 <% end %>

 

