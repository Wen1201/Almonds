
<h2>All Posts</h2>


<p>
  Total: <%= pluralize(@posts.length, 'post') %>
</p>


<ul>
<% @posts.each do |post| %>
  <li>
    <%= link_to post.name, post_path(post)  %>
    (<%= link_to post.user.name, user_path(post.user) %>)
   <br>
   <%= image_tag post.image, alt: post.name %>
   <br>
   <br>
 
 
  </li>
<% end %>
</ul>
