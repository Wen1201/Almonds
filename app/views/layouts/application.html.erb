<!DOCTYPE html>
<html>
  <head>
    <title>Mycoolwebsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
       <h1>Database</h1>
      
     <div class="header">
      <ul class="user">
      <% if @current_user.present? %>
      <%= image_tag @current_user.image, class:"user-p"%>
          <li><%= link_to @current_user.name, user_path(@current_user.id) %></li>
          <li><%= link_to 'Logout', login_path, method: 'delete' %></li>
      <% else %>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
      <% end %>
      </ul>
        <ul class="nav-area">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'All Posts', posts_path %></li>
      <% if @current_user.present? %>
          <li><%= link_to 'Create Post', new_post_path %></li>
      <% end %>
          <li><%= link_to "All Catrgories", categories_path %></li>
          <li><%= link_to "All Movies", movies_path %></li>
      <% if @current_user.present? %>
          <li><%= link_to 'Create A Movie', new_movie_path %></li>
      <% end %>
        </ul>
      
     </div>

    <%= yield %>

  </body>
</html>
