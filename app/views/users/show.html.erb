<div class="user-container">
  <div class="user-img">
    <% if @user.image.present? %>
      <%= image_tag @user.image, alt: @user.name, class:"user_image" %>
    <% end %>
  </div>
  <br>
  <div class="user-name">
      <%= @user.name %>
  </div> 


<h4 class="liked"> Posted </h4>
<div class="container">
  <% @current_user.posts.each do |p| %>
    <div class="gallery-container w-2 h-2"> 
        <div class="gallery-item">
            <div class="image">
              <%= link_to (image_tag p.image, alt: p.name), post_path(p) %>
            </div>
            <div class="text"> 
              <%= p.name %>
            </div>
          </div>     
        </div>
    <% end %>
</div>
