

<h2 class="user-name"><%= @user.name %></h2> 
<p>
<%= @user.about %>
</p>
<div >
<% if @user.image.present? %>
  <%= image_tag @user.image, alt: @user.name, class:"user_image" %>
<% end %>
</div>

<h4 class="liked"> Liked </h4> <p class="h">â™¥</p>

<div class="container">
  <% @current_user.liked_posts.each do |p| %>
    <div class="gallery-container w-2 h-2"> 
        <div class="gallery-item">
            <div class="image">
              <%= link_to (image_tag p.image, alt: p.name), post_path(p) %>
            </div>
            <div class="text"> 
              <%= p.name %>
            </div>
          </div>     
        </div>
    <% end %>
</div>







