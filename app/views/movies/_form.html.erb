

<% if @movie.errors.any? %>
  <strong class="t">Please correct the following:</strong>
  <ul>
    <% @movie.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>
<div class="text">
<div class="container">
<%= form_with model: @movie, local: true do |f| %>

<div class="all-form">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name,class:"field" %>
  <br>
  <br>

  <%= f.label :poster %>
  <br>
  <%= f.text_field :image, placeholder:"URL",class:"field" %>
  <br>
  <br>


  <%= f.submit'Submit', class:"submit"%>
</div>
<% end %>
</div>
</div>
</div>