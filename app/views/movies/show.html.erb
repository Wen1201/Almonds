<% if @current_user.present? %>
<h1><%= @movie.name %></h1>

<h2>All Posts About This Movie</h2>

<div class="container">
  <% @movie.posts.each do |p| %>
    <div class="gallery-container w-2 h-3"> 
        <div class="gallery-item">
          <div class="image">
             <%= link_to (image_tag p.image, alt: p.name), user_path(p.user)%>
            </div>
            <div class="text" id="movie-show-text">  
            <%= link_to p.name, post_path(p.id) %>
             (<%= link_to p.user.name, user_path(p.user) %>)
            </div>
          </div>     
      </div>   
  <% end %>
</div>
<% else %>
  <p class="please"> Please <%= link_to 'Login', login_path%> or <%= link_to 'Sign Up', new_user_path %> to start.....</p>
<% end %>


